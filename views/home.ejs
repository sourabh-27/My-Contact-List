<!DOCTYPE html>
<html>
<head>
    <title>
        <%= locals.title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
</head>
<body>
    <h1 id="page-heading">
        <i class="fas fa-address-book"></i>
        My Contacts List
    </h1>
    <div id="main-container">
        <ul>
            <% for(let i of contacts_list){ %>
                <div>
                    <li>
                        <p id="contactName"><%= i.name %></p>
                        <p id="contactNum"><%= i.phone %></p>
                        <span class="delete-button">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-trash"></i>
                            </a>
                        </span>
                    </li>
                </div>
                <!-- <div class="delete-button">
                    <a href>
                        <i class="fas fa-trash"></i>
                    </a>
                </div> -->
            <% } %>
        </ul>

        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number" name="phone" placeholder="Enter number" required>
            <button type="submit">Add</button>
        </form>
    </div>

    <script type="text/javascript" src="/js/home.js"></script>
</body> 
</html>